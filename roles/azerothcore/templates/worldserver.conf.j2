[worldserver]

# CONNECTIONS AND DIRECTORIES
RealmID = {{ realmlist.id }}
LogsDir = "../log"
LoginDatabaseInfo = "{{ database.auth.host }};{{ database.auth.port }};{{ mysql.user }};{{ mysql.pass }};{{ database.auth.name }}"
WorldDatabaseInfo = "{{ database.world.host }};{{ database.world.port }};{{ mysql.user }};{{ mysql.pass }};{{ database.world.name }}"
CharacterDatabaseInfo = "{{ database.characters.host }};{{ database.characters.port }};{{ mysql.user }};{{ mysql.pass }};{{ database.characters.name }}"
WorldServerPort = {{ realmlist.port }}

# SERVER SETTINGS
RealmZone = {{ realmlist.timezone }}
MaxPlayerLevel = 29
MaxPrimaryTradeSkill = 11
MinPetitionSigns = 1
MailDeliveryDelay = 0
Motd = "Welcome to the Wobbling Goblin!"

# PLAYER INTERACTION
AllowTwoSide.Interaction.Calendar = 1
AllowTwoSide.Interaction.Chat = 1
AllowTwoSide.Interaction.Emote = 1
AllowTwoSide.Interaction.Channel = 1
AllowTwoSide.Interaction.Group = 1
AllowTwoSide.Interaction.Guild = 1
AllowTwoSide.Interaction.Auction = 1
AllowTwoSide.Interaction.Mail = 1
AllowTwoSide.WhoList = 1
AllowTwoSide.AddFriend = 1
AllowTwoSide.Trade = 1

# CREATURE SETTINGS
Rate.Creature.Aggro = 0.8
Corpse.Decay.NORMAL    = 120
Corpse.Decay.RARE      = 600
Corpse.Decay.ELITE     = 600
Corpse.Decay.RAREELITE = 600
Rate.Corpse.Decay.Looted = 0.25

# VISIBILITY AND DISTANCES
Visibility.Distance.Continents = 120

# SERVER RATES
Rate.RewardBonusMoney = 0

# SERVER RATES
Rate.Auction.Deposit = 0
Rate.Auction.Cut = 0

# BATTLEGROUND CONFIG
Battleground.QueueAnnouncer.Enable = 1
Battleground.QueueAnnouncer.Limit.MinPlayers = 1

# ARENA CONFIG
Arena.ArenaSeason.InProgress = 0
Arena.ArenaSeason.ID = 0

# CONSOLE AND REMOTE ACCESS
SOAP.Enabled = 1
SOAP.Port = {{ acore.console.port }}

# LOGGING SYSTEM SETTINGS
Appender.Console=1,4,7,"1 9 3 6 5 8"
Appender.Server=2,5,7,Server.log
Appender.GM=2,5,7,GM.log
Appender.DBErrors=2,5,7,DBErrors.log
