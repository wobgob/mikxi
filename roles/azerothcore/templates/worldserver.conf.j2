[worldserver]

# CONNECTIONS AND DIRECTORIES
RealmID = {{ realmlist.id }}
LogsDir = "../log"
LoginDatabaseInfo = "{{ mysql.host }};{{ mysql.port }};{{ mysql.user }};{{ mysql.pass }};{{ database.auth }}"
WorldDatabaseInfo = "{{ mysql.host }};{{ mysql.port }};{{ mysql.user }};{{ mysql.pass }};{{ database.world }}"
CharacterDatabaseInfo = "{{ mysql.host }};{{ mysql.port }};{{ mysql.user }};{{ mysql.pass }};{{ database.characters }}"
WorldServerPort = {{ realmlist.port }}

# SERVER SETTINGS
MaxPlayerLevel = 19
MaxPrimaryTradeSkill = 11
MinPetitionSigns = 1
Motd = "Welcome to the Wobbling Goblin!"

# PLAYER INTERACTION
AllowTwoSide.Interaction.Calendar = 1
AllowTwoSide.Interaction.Chat = 1
AllowTwoSide.Interaction.Emote = 1
AllowTwoSide.Interaction.Channel = 1
AllowTwoSide.Interaction.Group = 1
AllowTwoSide.Interaction.Guild = 1
AllowTwoSide.Interaction.Auction = 1
AllowTwoSide.Interaction.Mail = 1
AllowTwoSide.WhoList = 1
AllowTwoSide.AddFriend = 1
AllowTwoSide.Trade = 1

# CREATURE SETTINGS
Rate.Creature.Aggro = 0.8

# VISIBILITY AND DISTANCES
Visibility.Distance.Continents = 120

# BATTLEGROUND CONFIG
Battleground.QueueAnnouncer.Enable = 0

# CUSTOM SERVER OPTIONS
Guild.BankTabCost0 = 500000
Guild.BankTabCost1 = 1250000
Guild.BankTabCost2 = 2500000
Guild.BankTabCost3 = 5000000
Guild.BankTabCost4 = 12500000
Guild.BankTabCost5 = 25000000

