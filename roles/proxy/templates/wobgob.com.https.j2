server {
    listen 443 default_server;
    listen [::]:443 default_server;

    root /var/www/wobgob.com;

    index index.html;

    server_name wobgob.com www.wobgob.com;

    location / {
        try_files $uri $uri/ =404;
    }

    ssl on;
    ssl_certificate /etc/letsencrypt/live/wobgob.com/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/wobgob.com/privkey.pem;
}

server {
    listen 0.0.0.0:80;

    server_name wobgob.com www.wobgob.com;

    rewrite ^ https://$host$request_uri? permanent;
}