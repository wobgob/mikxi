winzig="cd /home/winzig/winzig && until /usr/bin/node /home/winzig/winzig/index.js; do sleep 1; done"

winzig_session="winzig"

if tmux new-session -d -s $winzig_session; then
    echo "Created winzig session: $winzig_session"
else
    echo "Error when trying to create winzig session: $winzig_session"
fi

if tmux send-keys -t $winzig_session "$winzig" C-m; then
    echo "Executed \"$winzig\" inside $winzig_session"
    echo "You can attach to $winzig_session and check the result using \"tmux attach -t $winzig_session\""
else
    echo "Error when executing \"$winzig\" inside $winzig_session"
fi